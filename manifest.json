{
    "manifest_version": 3,
    "name": "TabWise - Tab Organizer",
    "version": "1.0.0",
    "description": "Organize, summarize, and categorize your open tabs effortlessly.",
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "images/tabWise.png",
            "48": "images/tabWise.png",
            "128": "images/tabWise.png"
        },
        "default_title": "Click me"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "tabs", 
        "storage"
    ],
    "host_permissions": [
        "http://localhost:8000/*"
    ],
    "icons": {
        "16": "images/tabWise.png",
        "48": "images/tabWise.png",
        "128": "images/tabWise.png"
    }
}